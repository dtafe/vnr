@using HRM.Presentation.UI.Controls.Kendo
@model String
@{
    //TextBoxBuilderInfo txt = new TextBoxBuilderInfo()
    //{
    //    Name="Vnr_MaskedTextBox_Time"
    //};
}

@(Html.TextBoxFor(m => m, new { id = "Vnr_MaskedTextBox_Time" }))

<script type="text/javascript">
    var h = 0;
    $(document).ready(function () {
        $("#Vnr_MaskedTextBox_Time").kendoMaskedTextBox({
            mask: "~!:&#:$%",
            rules: {
                "~": function (char) {
                    if (char == 0 || char == 1 || char == 2)
                    {
                        h = char;
                        return char;
                    }
                    return "";
                },
                "!": function (char) {
                    if (h == 2)
                    {
                        if (char > 3)
                            return "";
                    }
                    return char;
                },
                "&": function (char) {
                    if (char > 5)
                        return "";
                    return char;
                },
                "#": function (char) {
                    return char;
                },
                "$": function (char) {
                    if (char > 5)
                        return "";
                    return char;
                },
                "%": function (char) {
                    return char;
                },
            }
        });
    });
</script>