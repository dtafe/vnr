@using HRM.Infrastructure.Utilities
@{
    var _hrm_Cat_Service = ConstantPathWeb.Hrm_Cat_Service;
}

@(Html.Kendo().DropDownListFor(m => m)
                                      .Name("ShiftName")
                              .HtmlAttributes(new { data_skip = "true", data_bind = "nullableValue: OvertimeTypeID" })
                      .AutoBind(false)
                      .OptionLabel("- Please select -")
                              .DataTextField("OvertimeTypeName")
                              .DataValueField("ID")
                      .DataSource(dataSource =>
                      {
                          dataSource.Read(read => read.Url(_hrm_Cat_Service + "api/CatOvertimeType/")).ServerFiltering(true);
                      })

);
@Html.ValidationMessageFor(m => m)
