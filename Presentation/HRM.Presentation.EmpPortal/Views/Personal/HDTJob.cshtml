
@using HRM.Infrastructure.Utilities;
@using HRM.Presentation.UI.Controls.Kendo
@using HRM.Presentation.Hr.Models
@{
    Layout = null;
    var _hrm_Hre_Service = ConstantPathWeb.Hrm_Hre_Service;
    string ProfileID = string.Empty;
    if (Model != null)
    { 
        ProfileID ="?profileID=" + Model.ID;
    }
}
@model HRM.Presentation.EmpPortal.Models.Hre_ProfileModelPortal



@{
    string[] valueFields = new string[]
                            {
                                Hre_HDTJobModel.FieldNames.HDTJobTypeName,
                                Hre_HDTJobModel.FieldNames.DateFrom,
                                Hre_HDTJobModel.FieldNames.DateTo
                            };
    Dictionary<string, int> sizeFields = new Dictionary<string, int>()
                            {
                                {Hre_HDTJobModel.FieldNames.HDTJobTypeName,130},
                                {Hre_HDTJobModel.FieldNames.DateFrom,120},
                                {Hre_HDTJobModel.FieldNames.DateTo,120}
                            };

    Dictionary<string, string> displayFields = new Dictionary<string, string>()
                            {
                                {Hre_HDTJobModel.FieldNames.HDTJobTypeName, ConstantDisplay.HRM_HR_HDTJob_HDTType},
                                {Hre_HDTJobModel.FieldNames.DateFrom, ConstantDisplay.HRM_HR_HDTJob_DateFrom},
                                {Hre_HDTJobModel.FieldNames.DateTo, ConstantDisplay.HRM_HR_HDTJob_DateTo}
                            };
    var filterable = new Dictionary<string, bool>()
                            {
                               {Hre_HDTJobModel.FieldNames.HDTJobTypeName,true},
                               {Hre_HDTJobModel.FieldNames.DateFrom,true},
                                {Hre_HDTJobModel.FieldNames.DateTo,true},
                            };

    var grid = new GridBuilderInfo
    {
        Name = "gridHDTJob2",
        ReadActionUrl = _hrm_Hre_Service + "Hre_GetData/GetHDTJobByProfileID" + ProfileID,
        ValueFields = valueFields,
        SizeFields = sizeFields,
        DisplayFields = displayFields,
        Filterable=filterable,
        GridHeight = 370,
        ShowEditIcon = false,
        ShowCheckbox = false,
        AutoBind = true
    };
}

<!--Khởi tạo Grid-->
@(Html.VnrGrid<Hre_HDTJobModel>(grid))