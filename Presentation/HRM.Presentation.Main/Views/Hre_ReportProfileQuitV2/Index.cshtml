                    </div>

                    <div id="div14">
                        <div class="FieldTitle150">
                           @Html.VnrLabelFor(model => model.TypeOfStopID)
                        </div>
                        <div class="FieldValue">
                            @{
                                var _TypeOfStopID = new ComboBoxBuilderInfo()
                                {
