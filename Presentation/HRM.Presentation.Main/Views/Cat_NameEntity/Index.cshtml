@using HRM.Infrastructure.Utilities;
@using HRM.Presentation.UI.Controls.Kendo
@using HRM.Infrastructure.Security;
@using HRM.Presentation.Category.Models;
@model Cat_NameEntityModel

@{
    ViewBag.Title = ConstantDisplay.HRM_Category_Budget_Title.TranslateString();
    var _hrm_Hre_Service = ConstantPathWeb.Hrm_Hre_Service;
    var _hrm_Main_Web = ConstantPathWeb.Hrm_Main_Web;
    Layout = null;
}
@{
    var window = new WindowBuilderInfo
    {
        Name = ConstantControlName.HRM_Category_NameEntity_PopUp_Name,
        Visible = false,

        LoadContentFrom = @_hrm_Main_Web + "Cat_NameEntity/Cat_NameEntityInfo/",
    };
    var NameEntityType = EnumDropDown.EntityType.E_CATEGORY_KPI.ToString();
}
@(Html.VnrWindow(window))

<script>
    //Biến để lưu id của các dòng đã check chọn
    var selectedIds = [];
    var gridName = '@ConstantControlName.HRM_Category_NameEntity_Grid_Name';
    var popUpName = '@ConstantControlName.HRM_Category_NameEntity_PopUp_Name';
    var titleEditPopUp = '@Html.Raw(ConstantDisplay.HRM_Category_NameEntity_PopUp_Edit_Title.TranslateString())';
    var titleCreatePopUp = '@Html.Raw(ConstantDisplay.HRM_Category_NameEntity_PopUp_Create_Title.TranslateString())';

    $(document).ready(function () {
        //Ẩn hiện div chứa các input tìm kiếm
        ShowHidePanel();
        //Xử lý sự kiện click button tìm kiếm
        $("#btnSearch").click(function () {

            ReadGrid('@ConstantControlName.HRM_Category_NameEntity_Grid_Name');
        });
        
        EditGridNewPage('@ConstantControlName.HRM_Category_NameEntity_Grid_Name', '#Hrm_Main_Web/Cat_NameEntity/Edit/', 'Hrm_Main_Web', '@_hrm_Main_Web');
    });
    //Lấy dữ liệu khi tìm kiếm
    function filterFieldInfo(isExport) {
        return {
            NameEntityType: '@NameEntityType',
            NameEntityName: $('#NameEntityName1').val(),
            IsExport: isExport,
            ValueFields: $('#valueFieldsGrid').val()
        };
    }
    //Xử lý khi check chọn các dòng trên lưới thì lưu id của các dòng đó cào biến selectedIds ở trên
    GridCheckbox('@ConstantControlName.HRM_Category_NameEntity_Grid_Name');
    //Tạo mới ngân hàng
    $("#btnCreate").click(function () {
        var isAccess = checkPermission(PrivilegeType.Create, '@ConstantPermission.Cat_NameEntity');
        if (!isAccess) {
            return;
        }
        //PopUpCreate('@ConstantControlName.HRM_Category_NameEntity_PopUp_Name', titleCreatePopUp);
        KendoRouteMapping('#Hrm_Main_Web/Cat_NameEntity/Create/', 'Hrm_Main_Web', '@_hrm_Main_Web');
    });
    //Chỉnh sửa ngân hàng

    //Xóa ngân hàng
    $('#btnDelete').click(function (e) {
        var isAccess = checkPermission(PrivilegeType.Delete, '@ConstantPermission.Cat_NameEntity');
        if (!isAccess) {
            return;
        }

        if (selectedIds == "") {
            DeleteFail();
            return;
        }
        DeleteSelected('@ConstantControlName.HRM_Category_NameEntity_Grid_Name', '@_hrm_Main_Web' + "Cat_NameEntity/RemoveSelected/", selectedIds.join(","));
    });
    $("#btnExportAll").click(function () {
        
        var grid = $('#gridCatNameEntity').data("kendoGrid");
        var count = grid.dataSource._data.toJSON().length;
        if (count == 0) {
            ExportAllFail();
            return;
        }
        var urlGetData = '@_hrm_Hre_Service' + "Cat_GetData/ExportAllNameEntityList/";
        var urlDownload = '@_hrm_Main_Web';
        var dataParameter = {
            NameEntityName: $('#NameEntityName1').val(),
            IsExport: true,
            ValueFields: $('#valueFieldsGrid').val()
        };
        //alert(dataParameter);
        ExportAll(urlGetData, dataParameter, urlDownload, '@ConstantPermission.Cat_NameEntity');
    });

    $("#btnExportSelected").click(function () {
        if (selectedIds == "") {
            ExportSelectedFail();
            return;
        }
        var urlGetData = '@_hrm_Hre_Service' + "Cat_GetData/ExportNameEntitySelected/";
        var urlDownload = '@_hrm_Main_Web';
        var listIds = selectedIds.join(",");
        var listFields = $('#valueFieldsGrid').val();
        ExportSelected(urlGetData, listIds, listFields, urlDownload, '@ConstantPermission.Cat_NameEntity');
    });

</script>

<div class="panel-wrap">
    <div id="main-content">
        <div class="widget">
            <h3>
                <!--Dòng title cho biết đang ở form nào và link quay lại-->
                @Html.MvcSiteMap().SiteMapPath("BootstrapSiteMapPathHelperModel")
                <span class="collapse k-icon k-i-arrowhead-n"></span>
            </h3>
            <!--Bất đầu nôi dung tìm kiếm-->
            <div class="contendSearchWidge">
                <div>
                    <div class="FieldTitle">
                        @Html.VnrLabelFor(model => model.NameEntityName)
                    </div>
                    <div class="FieldValue">
                        @{
                            var txtNameEntityName = new TextBoxBuilderInfo()
                            {
                                Name = "NameEntityName1"
                            };
                        }
                        @Html.VnrTextBox(txtNameEntityName)
                    </div>
