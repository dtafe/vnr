            TotalMarkTo: $('#@Html.FieldIdFor(model => model.TotalMarkTo)').val() ? $('#@Html.FieldIdFor(model => model.TotalMarkTo)').val() : null,
            LevelID: $("#LevelID").val(),
            IsExport: isExport,
            ValueFields: $('#valueFieldsGrid').val()
        };
        return dataParameter;
    }
    //Xử lý sự kiện click button tìm kiếm
    $(document).ready(function () {
        var url = '@_hrm_Main_Web' + "Eva_PerformanceEvaWaitingEva360/PerformanceEvaWaitingEvaInfo360/";

        var ProfileID = $("#ProfileIDByUser").val();
        $('#EvaluatorID').val(ProfileID);
        ShowHidePanel();
    });

    $("#btnSearch").click(function () {
        ReadGrid(gridName);  
    });

    //Xử Lý grid
    GridCheckbox(gridName);

    $("#btnExportAll").click(function () {
        var grid = $('#'+gridName).data("kendoGrid");
        var count = grid.dataSource._data.toJSON().length;
        if (count == 0) {
            ExportAllFail();
            return;
        }
        var urlGetData = '@_hrm_Hre_Service' + "Eva_GetData/ExportPerformanceEvaWaitList/";
        var urlDownload = '@_hrm_Main_Web';
        var dataParameter = filterFieldInfo(true);
        ExportAll(urlGetData, dataParameter, urlDownload, '@ConstantPermission.Eva_PerformanceEvaWaitingEva360');
    });
    $("#btnExportSelected").click(function () {
        if (selectedIds == "") {
            ExportSelectedFail();
            return;
        }
        var urlGetData = '@_hrm_Hre_Service' + "Eva_GetData/ExportPerformanceEvaSelected/";
        var urlDownload = '@_hrm_Main_Web';
        var listIds = selectedIds.join(",");
        var listFields = $('#valueFieldsGrid').val();
        ExportSelected(urlGetData, listIds, listFields, urlDownload, '@ConstantPermission.Eva_PerformanceEvaWaitingEva360');
    });
    $('#btnEvaluation').click(function (e) {
        var isAccess = checkPermission(PrivilegeType.Create, '@ConstantPermission.Eva_PerformanceEvaWaitingEva360', false);
        if (!isAccess) {
            ShowNotificationProcessor('@string.Format(ConstantDisplay.HRM_Common_PermissionNotAllow.TranslateString(), ConstantDisplay.HRM_Evaluation_PerformanceDetail_Evaluation.TranslateString())');
            return;
        }
        if (selectedIds == "") {
            ShowNotificationProcessor('Error, Vui Lòng Chọn 1 Dòng !!!');
            return false;
        }
        e.preventDefault();

        var grid = $('#'+gridName).data("kendoGrid");
        var selectedItem = grid.dataItem(grid.select());
        var listIds = selectedIds.join(",");
        var count = selectedIds.length;
        var kt;

        if (count == 1) {
            KendoRouteMapping("#Hrm_Main_Web/Eva_PerformanceEvaWaitingEva360/Edit/" + listIds, 'Hrm_Main_Web', '@_hrm_Main_Web');      
        }
        else if (count == 0) {
            ShowNotificationProcessor('Error, Vui Lòng Chọn 1 Dòng !!!');
            return false;
        }
        else {
            ShowNotificationProcessor('Error, Vui Lòng Chọn Duy Nhất 1 Dòng !!!');
            return false;
        }
        selectedIds = [];
    });
</script>
