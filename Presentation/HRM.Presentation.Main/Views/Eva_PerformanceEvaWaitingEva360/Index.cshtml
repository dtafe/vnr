        var treeView = $("#treeviewOrg").data("kendoTreeView");
        @*var jobTitleID = $('#@Html.FieldIdFor(model => model.JobTitleID)').val();
        var positionID = $('#@Html.FieldIdFor(model => model.PositionID)').val();*@
        var dataParameter = {
            EvaluatorID: $('#EvaluatorID').val(),
