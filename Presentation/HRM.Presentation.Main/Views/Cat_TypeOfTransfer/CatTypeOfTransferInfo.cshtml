@using HRM.Infrastructure.Utilities
@using System.Collections
@using HRM.Presentation.UI.Controls.Kendo
@using HRM.Presentation.Category.Models;

@model Cat_NameEntityModel

@{
    Layout = null;
    var ID = Model == null ? Guid.Empty : Model.ID;
    var _hrm_Hre_Service = ConstantPathWeb.Hrm_Hre_Service;
    var _hrm_Sys_Service = ConstantPathWeb.Hrm_Sys_Service;
}
<script>
    SetFieldRequiredByScreenName('Cat_NameEntity_TypeOfTransfer');
    function onSaveNew() {
        $("#NameEntityType").val('@EnumDropDown.EntityType.E_TYPEOFTRANSFER.ToString()');
        onSaveAndContinue($('#form_cat_typeoftransfer'), '@_hrm_Hre_Service', 'api/Cat_NameEntity/', '@ConstantControlName.HRM_Category_TypeOfTransfer_Grid_Name', 'windowCat_TypeOfTransfer'); return false;
    }

    function onSaveClose() {
        debugger;
        $("#NameEntityType").val('@EnumDropDown.EntityType.E_TYPEOFTRANSFER.ToString()');
        onSaveAndClose($('#form_cat_typeoftransfer'), '@_hrm_Hre_Service', 'api/Cat_NameEntity/', '@ConstantControlName.HRM_Category_TypeOfTransfer_Grid_Name', 'windowCat_TypeOfTransfer'); return false;
    }
    function onSaveDataPopUp() {
        $("#NameEntityType").val('@EnumDropDown.EntityType.E_TYPEOFTRANSFER.ToString()');
        onlySave($('#form_cat_typeoftransfer'), '@_hrm_Hre_Service', 'api/Cat_NameEntity/', '@ConstantControlName.HRM_Category_TypeOfTransfer_Grid_Name'); return false;
    }
</script>
<!--Form dùng cho edit và update-->
@using (Html.BeginForm("#", "", FormMethod.Post, new { id = "form_cat_typeoftransfer" }))
{
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.NameEntityType)
    <table>
        <tr>
            <td>
                <div>
                    <div class="FieldTitle">
                        @Html.VnrLabelFor(mode => mode.Code)
                    </div>
                    <div class="FieldValue">
                        @{
    var _Code = new TextBoxBuilderInfo()
    {
        Width = 300,
        Name = "typeoftransfer_Code",
        Value = Model != null ? Model.Code : null
    };
                        }
                        @Html.VnrTextBoxFor(mode => mode.Code, _Code)
                    </div>
                </div>
                <div>
                    <div class="FieldTitle">
                        @Html.VnrLabelFor(mode => mode.NameEntityName)
                    </div>
                    <div class="FieldValue">
                        @{
    var _Name = new TextBoxBuilderInfo()
    {
        Width = 300,
        Name = "typeoftransfer_NameEntityName",
        Value = Model != null ? Model.NameEntityName : null
    };
                        }
                        @Html.VnrTextBoxFor(mode => mode.NameEntityName, _Name)
                    </div>
                </div>
                <div>
                    <div class="FieldTitle">
                        @Html.VnrLabelFor(mode => mode.Description)
                    </div>
                    <div class="FieldValue">
                        @Html.VnrTextAreaFor(mode => mode.Description, "width:500px;height:100px;")
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td style="padding-top:2px; padding-bottom:10px;">
                <div class="LineFooterCommandEdit">
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div>
                    <div class="FieldTitle"></div>
                    <div class="FieldValue">
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "onSaveDataPopUp", Name = "save-typeoftransfer", Content = ConstantAction.HRM_Common_Save.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "onSaveNew", Name = "save-New-typeoftransfer", Content = ConstantAction.HRM_Common_SaveNew.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "onSaveClose", Name = "save-close-typeoftransfer", Content = ConstantAction.HRM_Common_SaveClose.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                    </div>
                </div>
            </td>
        </tr>
    </table>
}
