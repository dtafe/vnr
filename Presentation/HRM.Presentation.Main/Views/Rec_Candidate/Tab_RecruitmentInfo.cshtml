<script type="text/javascript">
    $('input[type=checkbox]').change(function () {
        if ($(this).is(':checked')) {
            $(this).val('true');
        } else {
            $(this).val('false');
        }
    });

    function changeSalarySuggestMoney(e) {
        $("#RecruitmentInfo_SalarySuggest").val(e.sender._value);
    };
    function changeSalaryCurrentMoney(e) {
        $("#RecruitmentInfo_SalaryCurrent").val(e.sender._value);
    };
    function changeSalaryApproveMoney(e) {
        $("#RecruitmentInfo_SalaryApprove").val(e.sender._value);
    };


    function JobVacancySelect(e) {
        var dataItem = this.dataSource.view()[e.item.index()];
        //var _WorkPlaceID = $("#WorkPlaceID").data("kendoComboBox");
        $.ajax({
            url: '@_hrm_Hre_Service' + "Rec_GetData/GetJobVacancyByID",
            data: { JobVacancyID: dataItem.ID },
            type: 'POST',
            datatype: 'json',
            success: function (data) {
                if (data != null) {
                    $("#OrgStructureID").val(data.OrgStructureID);
                    $("#OrgStructureTreeViewinput").val(data.OrgStructureName);
                    //_WorkPlaceID.value(data.WorkPlaceID);
                }
            }
        });
    }
</script>

