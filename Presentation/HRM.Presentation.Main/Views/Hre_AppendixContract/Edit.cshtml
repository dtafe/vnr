@using HRM.Infrastructure.Utilities;

@using HRM.Presentation.UI.Controls.Kendo

@model HRM.Presentation.Hr.Models.Hre_AppendixContractModel
@{
    ViewBag.Title = "Index Hre_AppendixContract";
    Layout = null;
    var _hrm_Main_Web = ConstantPathWeb.Hrm_Main_Web;
    var _hrm_Hr_Service = ConstantPathWeb.Hrm_Hre_Service;
}
<script>
    SetFieldRequired();

    function doEditProfile() {
        var result = false;
            onCreate($('#form-create'), '@_hrm_Hr_Service', 'api/Hre_AppendixContract/', "popupNotification");
            result = true;
        return result;
    };
    function doSaveNew() {
            KendoRouteMapping('#Hrm_Main_Web/Hre_AppendixContract/Create/', 'Hrm_Main_Web', '@_hrm_Main_Web');
    }
</script>
<div>
    @ViewBag.MsgInsert
</div>
<form action="#" method="POST" id="form-create">
    <div class="panel-wrap">
        <div id="main-content">
            <div class="widget">
                <div class="section-header">
                    <div class="title">
                        <img src="@ConstantPath.HreContractIconPath" alt="" width="20" height="20" />
                        @ConstantDisplay.HRM_HR_AppendixContract_Update.TranslateString() <a class="link-back" onclick="clickBackAppendixContract()" style="padding-left: 3px">(@ConstantDisplay.HRM_HR_Back_To_AppendixContract_List.TranslateString())</a>
                    </div>
                </div>
                <div class="commandToolBarWidge">
                    <div class="options">
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "doEditProfile", Name = "btnEditProfile", Content = ConstantAction.HRM_Common_Save.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "doSaveNew", Name = "save-new", Content = ConstantAction.HRM_Common_SaveNew.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                    </div>
                </div>
                @Html.Partial("CreateOrUpdate", Model)
            </div>
        </div>
    </div>
</form>

<script>
    function clickBackAppendixContract() {
        var link = $("#CurrentLinkForClickBack").val();
        if (link == "") {
            KendoRouteMapping("#Hrm_Main_Web/Hre_AppendixContract/Index#NewTab", "Hrm_Main_Web", '@_hrm_Main_Web');
        }
        else {
            clickBack();
        }
    }
</script>