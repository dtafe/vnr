                            @Html.DisplayFor(model => model.ProfileName)
                        </div>
                        <div style="clear: both;"></div>
                    </div>
                    <div id="div3">
                        <div class="FieldTitle">
                            @Html.VnrLabelFor(mode => mode.DecisionNo)
                        </div>
