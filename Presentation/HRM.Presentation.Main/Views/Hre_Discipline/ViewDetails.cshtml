                            @Html.DisplayFor(model => model.DecisionNo)
                        </div>
                        <div style="clear: both;"></div>
                    </div>
                    <div id="div4">
                        <div class="FieldTitle">
                            @Html.VnrLabelFor(mode => mode.DateOfViolation)
                        </div>
                        <div class="FieldValue">
                            @Html.DisplayFor(model => model.DateOfViolation)
                        </div>
                        <div style="clear: both;"></div>
                    </div>
                    <div id="div5">
                        <div class="FieldTitle">
                            @Html.VnrLabelFor(mode => mode.DateEndOfViolation)
                        </div>
                        <div class="FieldValue">
                            @Html.DisplayFor(model => model.DateEndOfViolation)
