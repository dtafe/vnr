                            @Html.VnrLabelFor(mode => mode.ContentOfDiscipline)
                        </div>
                        <div class="FieldValue">
                            @Html.DisplayFor(model => model.ContentOfDiscipline)
                        </div>
                        <div style="clear: both;"></div>
                    </div>

                    <div id="div8">
