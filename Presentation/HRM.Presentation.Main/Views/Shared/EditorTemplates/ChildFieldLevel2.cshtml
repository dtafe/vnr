
@using HRM.Infrastructure.Utilities
@{
    var _hrm_Cat_Service = ConstantPathWeb.Hrm_Cat_Service;
}

@(Html.Kendo().DropDownListFor(m => m)
                                      .Name("ChildFieldLevel2")
                      .AutoBind(true)
                      .OptionLabel("- Please select -")
                      .DataTextField("Name")
                              .DataValueField("Name")
                      .DataSource(dataSource =>
                      {
                          dataSource.Read(read => read.Url(_hrm_Cat_Service + "Cat_GetData/GetMultiChildField").Data("filterChildFieldLevel2"))
                                  .ServerFiltering(true);
                      })
                          .CascadeFrom("ChildFieldLevel1")


)
@Html.ValidationMessageFor(m => m)
