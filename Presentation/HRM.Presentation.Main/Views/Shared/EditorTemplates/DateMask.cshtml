@using HRM.Presentation.UI.Controls.Kendo
@model String
@{
    //TextBoxBuilderInfo txt = new TextBoxBuilderInfo()
    //{
    //    Name="Vnr_MaskedTextBox_Time"
    //};
}

@(Html.TextBoxFor(m => m, new { id = "Vnr_MaskedTextBox_Date" }))

<script type="text/javascript">
    var h = 0;
    $(document).ready(function () {
        $("#Vnr_MaskedTextBox_Date").kendoMaskedTextBox({
            mask: "~!/&#/$%^*",
            rules: {
                "~": function (char) {
                    if (char == 0 || char == 1 || char == 2 || char == 3) {
                        h = char;
                        return char;
                    }
                    return "";
                },
                "!": function (char) {
                    if (char == 0 || char == 1 || char == 2 || char == 3 || char == 4 || char == 5 || char == 6 || char == 7 || char == 8 || char == 9) {
                        if (h == 3) {
                            if (char > 1)
                                return "";
                        }
                        if (h == 0) {
                            if (char == 0)
                                return "";
                        }
                        return char;
                    }
                    return "";
                },
                "&": function (char) {
                    if (char == 0 || char == 1) {
                        h=char;
                        return char;
                    }
                    return "";
                },
                "#": function (char) {
                    if (char == 0 || char == 1 || char == 2 || char == 3 || char == 4 || char == 5 || char == 6 || char == 7 || char == 8 || char == 9) {
                        if (h == 1)
                        {
                            if (char > 2)
                                return "";
                        }
                        return char;
                    }
                    return "";
                },
                "$": function (char) {
                    if (char == 0 || char == 1 || char == 2 || char == 3 || char == 4 || char == 5 || char == 6 || char == 7 || char == 8 || char == 9) {
                        return char;
                    }
                    return "";
                },
                "%": function (char) {
                    if (char == 0 || char == 1 || char == 2 || char == 3 || char == 4 || char == 5 || char == 6 || char == 7 || char == 8 || char == 9) {
                        return char;
                    }
                    return "";
                },
                "^": function (char) {
                    if (char == 0 || char == 1 || char == 2 || char == 3 || char == 4 || char == 5 || char == 6 || char == 7 || char == 8 || char == 9) {
                        return char;
                    }
                    return "";
                },
                "*": function (char) {
                    if (char == 0 || char == 1 || char == 2 || char == 3 || char == 4 || char == 5 || char == 6 || char == 7 || char == 8 || char == 9) {
                        return char;
                    }
                    return "";
                },
            }
        });
    });
</script>