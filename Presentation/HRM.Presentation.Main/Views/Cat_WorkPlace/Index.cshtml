@{
    var window = new WindowBuilderInfo
    {
        Name = "windowCatWorkPlace",
        Visible = false,
        Width = 700,
        LoadContentFrom = @_hrm_Main_Web + "Cat_WorkPlace/CatWorkPlaceInfo/",
    };
