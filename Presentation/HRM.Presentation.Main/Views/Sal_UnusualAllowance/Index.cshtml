}

@{
    var window = new WindowBuilderInfo
    {
        Name = "windowSalUnusualAllowance",
        Visible = false,
        Width = 700,
        LoadContentFrom = @_hrm_Main_Web + "Sal_UnusualAllowance/Sal_UnusualAllowanceInfo/",
    };
}
@(Html.VnrWindow(window))

<script>
    var checkedNodes = [];
    var gridName = '@ConstantControlName.HRM_Category_UnusualAllowance_Grid_Name';
    var popUpName = '@ConstantControlName.HRM_Category_UnusualAllowance_PopUp_Name';
    var titleEditPopUp = '@Html.Raw(ConstantDisplay.HRM_Recruitment_UnusualAllowance_Update_Title.TranslateString())';
    var titleCreatePopUp = '@Html.Raw(ConstantDisplay.HRM_Recruitment_UnusualAllowance_Create_Title.TranslateString())';

    //bang
    //Data khi tìm kiếm
    function filterFieldInfo() {
        return {
            ProfileName: $('#UnusualAllowanceName1').val(),
            OrgStructureID: checkedNodes.join(','),
            UnusualEDTypeID: $('#@Html.FieldIdFor(model => model.UnusualEDTypeID)').val(),
            DateFrom: ConvertDatetime('@_hrm_Sys_Service' + 'Sys_GetData/GetFormatDate/', $("#DateFrom").val()),
            DateTo: ConvertDatetime('@_hrm_Sys_Service' + 'Sys_GetData/GetFormatDate/', $("#DateTo").val()),
            IsExport: false,
            ValueFields: $('#valueFieldsGrid').val()
        };
    }
    //Xử lý sự kiện click button tìm kiếm
    $(document).ready(function () {
        //Show Hide Panel
        ShowHidePanel();
        //Jump Anchor
        jumpAnchor("anchor");
        $("#btnSearch").click(function () {
            var treeView = $("#treeviewOrg").data("kendoTreeView");
            checkedNodeOrderNumbers(treeView.dataSource.view(), checkedNodes)
            ReadGrid(gridName);
        });

        //Xử lý Edit popup
        var url = '@_hrm_Main_Web' + "Sal_UnusualAllowance/Sal_UnusualAllowanceInfo/";
        EditGridPopUp("@ConstantControlName.HRM_Category_UnusualAllowance_Grid_Name", "windowSalUnusualAllowance", url, '@ConstantPermission.Sal_UnusualAllowance', titleEditPopUp);
    });

    //Xử lý Create
    $("#btnCreateUnusualAllowance").click(function () {
        var isAccess = checkPermission(PrivilegeType.Create, '@ConstantPermission.Sal_UnusualAllowance');
        if (!isAccess) {
            return;
        }
        PopUpCreate("windowSalUnusualAllowance", titleCreatePopUp, '@ConstantPermission.Sal_UnusualAllowance');
    });

    //Xử Lý grid
    GridCheckbox(gridName);

    //Xử Lý button delete
    $('#btnDelete').click(function (e) {
        if (selectedIds == "") {
            DeleteFail();
            return;
        }
        
        e.preventDefault();
        DeleteSelected(gridName, '@_hrm_Main_Web' + "Sal_UnusualAllowance/RemoveSelected/", selectedIds, '@ConstantPermission.Sal_UnusualAllowance');
        return false;
    });

    $(document).ready(function () {
        ShowHidePanel();
    });

    $("#btnExportSelected").click(function () {

        if (selectedIds == "") {
            ExportSelectedFail();
            return;
        }
        var urlGetData = '@_hrm_Hr_Service' + "Sal_GetData/ExportSUnusualAllowanceSelected/";
        var urlDownload = '@_hrm_Main_Web';
        var listIds = selectedIds.join(",");
        var listFields = $('#valueFieldsGrid').val();
        ExportSelected(urlGetData, listIds, listFields, urlDownload, '@ConstantPermission.Sal_UnusualAllowance');
    });

    $("#btnExportAll").click(function () {
        @*var isAccess = checkPermission(PrivilegeType.Create, '@ConstantPermission.Hre_ProfileQuit');
        if (!isAccess) {
            return;
        }*@
        var grid = $('#@ConstantControlName.HRM_Category_UnusualAllowance_Grid_Name').data("kendoGrid");
        if (grid.dataSource.total() == 0) {
            ExportAllFail();
            return;
        }
        var urlGetData = '@_hrm_Hr_Service' + "Sal_GetData/ExportAllUnusualAllowanceList/";
        var urlDownload = '@_hrm_Main_Web';
        var dataParameter = filterFieldInfo(true);
        ExportAll(urlGetData, dataParameter, urlDownload, '@ConstantPermission.Sal_UnusualAllowance');
    });

    $("#NavigationCat_Import").click(function () {
        KendoRouteMapping('#Hrm_Main_Web/Cat_Import/Import_List', 'Hrm_Main_Web', '@_hrm_Main_Web');
    });

</script>

