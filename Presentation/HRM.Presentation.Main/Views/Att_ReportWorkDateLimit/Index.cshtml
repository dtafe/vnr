                        @{
                            var orgTreeView = new TreeViewBuilderInfo
                            {
                                Name = "treeviewOrg",
                                DataTextField = "Name",
                                Url = @_hrm_Hr_Service + "Cat_GetData/GetOrgStructureTree",
