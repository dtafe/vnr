                                Width = 170,
                                Value = @Html.DisplayFor(mode => mode.TemplateId).ToString(),
                                Enable = true,
                            };
                        }
                        @(Html.DropDownListControl(mode => mode.TemplateId, dropdownTemplateId))
                        @Html.ValidationMessageFor(model => model.TemplateId)
