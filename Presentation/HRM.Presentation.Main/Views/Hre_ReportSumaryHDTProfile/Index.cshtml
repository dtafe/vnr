                            @Html.VnrLabelFor(mode => mode.HDTJobGroupID)
                        </div>
                        <div class="FieldValue">
                            <div class="FieldValue">
                                @{
                                    var dropdownHDTJobGroupID1 = new DropDownListBuilderInfo()
                                    {
