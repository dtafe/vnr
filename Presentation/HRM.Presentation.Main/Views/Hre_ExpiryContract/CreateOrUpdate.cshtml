                    _jobtitle.value(data.JobTitleID);
                  //  _jobtitle.text = data.JobTitleName;
                    _position.value(data.PositionID);
                  //  _position.text = data.PositionName;
                }
            }

        });
    }

    function SalaryRankChanged(e) {
