@using HRM.Presentation.UI.Controls.Kendo
@using HRM.Presentation.UI.Controls.Kendo.DropDownList
@using HRM.Presentation.UI.Controls.Kendo.MultiSelect

@using HRM.Infrastructure.Utilities

@model HRM.Presentation.Hr.Models.Hre_CardHistoryModel

@{
    var _hrm_Hr_Service = ConstantPathWeb.Hrm_Hre_Service;
}

@Html.ValidationSummary(false)
@Html.AntiForgeryToken()

<div class="VnRMain">
    <table style="width:100%">
        <tbody>         
            <tr><td colspan="3" style=""></td></tr>
            <tr>
                <td class="Box_Mid_Left">&nbsp;&nbsp;&nbsp;</td>
                <td valign="top">
                    <div id="div1">
                        <div class="FieldTitle">
                            @Html.VnrLabelFor(mode => mode.ProfileID)
                        </div>
                        <div class="FieldValue">                           
                            @{
                                var multiSelectProfileID = new MultiSelectInformation()
                                {
                                    Name = "ProfileID",
                                    DataTextField = "ProfileName",
                                    DataValueField = "ID",
                                    Url = @_hrm_Hr_Service + "Hre_GetData/GetMultiProfile",
                                    Placeholder = ConstantDisplay.HRM_HR_SelectProfile.TranslateString(),                                   
                                    MaxSelectedItems = 1,
                                    ValueMultiselect = @Html.DisplayFor(mode => mode.ProfileID).ToString()
                                };
                            }
                            @(Html.MultiSelectListControl(multiSelectProfileID))
                            @Html.ValidationMessageFor(model => model.ProfileID)
                            @Html.ValidationMessageFor(model => model.ProfileID)
                        </div>
                        <br/><br /><br />
                    </div>
                    <div id="div2">
                        <div class="FieldTitle">
                            @Html.VnrLabelFor(mode => mode.CardCode)
                        </div>
                        <div class="FieldValue">
                            @Html.EditorFor(model => model.CardCode)
                            @Html.ValidationMessageFor(model => model.CardCode)
                        </div>
                        <br /><br /><br/>
                    </div>
                    <div id="div3">
                        <div class="FieldTitle DateEffect">
                            @Html.VnrLabelFor(mode => mode.DateEffect)
                        </div>
                        <div class="FieldValue">                            
                            @{
                                var datepickerDateEffect = new DatePickerBuilderInfo()
                                {
                                    Value = @Html.DisplayFor(mode => mode.DateEffect).ToString()
                                };
                            }                            
                            @Html.VnrDatePickerFor(model => model.DateEffect, datepickerDateEffect)
                            @Html.ValidationMessageFor(model => model.DateEffect)
                        </div>
                        <br /><br />
                    </div>                  
                </td>
                <td class="Box_Mid_Right">&nbsp;&nbsp;&nbsp;&nbsp;</td>
            </tr>
            <tr>
                <td class="Box_Bottom_Left"></td>
                <td class="Box_Bottom_Mid"></td>
                <td class="Box_Bottom_Right"></td>
            </tr>
        </tbody>
    </table>
</div>
