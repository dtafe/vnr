@using HRM.Infrastructure.Utilities
@using System.Collections
@using HRM.Presentation.UI.Controls.Kendo

@using HRM.Presentation.Category.Models;
@model Cat_AppendixContractTypeModel

@{
    Layout = null;
    var ID = Model == null ? Guid.Empty : Model.ID;
    var _hrm_Hr_Service = ConstantPathWeb.Hrm_Hre_Service;
    var lineId = Model == null ? Guid.Empty : Model.ID;
    var _hrm_Sys_Service = ConstantPathWeb.Hrm_Sys_Service;
}
<script>
    SetFieldRequired();


    function onSaveNew() {
        //  if (!checkDuplicationCode()) {
        onSaveAndContinue($('#form_Cat_AppendixContractType'), '@_hrm_Hr_Service', 'api/Cat_AppendixContractType/', '@ConstantControlName.HRM_Category_AppendixContractType_Grid_Name', '@ConstantControlName.HRM_Category_AppendixContractType_PopUp_Name'); return false;
        //  }
    }

    function onSaveClose() {
        //  if (!checkDuplicationCode()) {
        onSaveAndClose($('#form_Cat_AppendixContractType'), '@_hrm_Hr_Service', 'api/Cat_AppendixContractType/', '@ConstantControlName.HRM_Category_AppendixContractType_Grid_Name', '@ConstantControlName.HRM_Category_AppendixContractType_PopUp_Name'); return false;
        // }
    }
    function onSaveDataPopUp() {
        // if (!checkDuplicationCode()) {

        onlySave($('#form_Cat_AppendixContractType'), '@_hrm_Hr_Service', 'api/Cat_AppendixContractType/', '@ConstantControlName.HRM_Category_AppendixContractType_Grid_Name'); return false;
        //  }
