</script>
<!--Form dùng cho edit và update-->
@using (Html.BeginForm("#", "", FormMethod.Post, new { id = "form_Cat_AppendixContractType" }))
{
    @Html.HiddenFor(model => model.ID)
    <table>
        <tr>
            <td>
                <div id="div5">
                    <div class="FieldTitle150">
                        @Html.VnrLabelFor(mode => mode.Code)
                    </div>
                    <div class="FieldValue">
                        @{
    var Code = new TextBoxBuilderInfo()
        {
            Width = 300,
            Name = "AppendixContractTypeInfo_Code",
            Value = Model != null ? Model.Code : null
        };
                        }
                        @Html.VnrTextBoxFor(mode => mode.Code, Code)
                    </div>
                </div>

                <div>
                    <div class="FieldTitle150">
                        @Html.VnrLabelFor(mode => mode.AppendixContractName)
                    </div>
                    <div class="FieldValue">
                        @Html.VnrTextBoxFor(mode => mode.AppendixContractName, "width: 300px")
                    </div>
                </div>
                <div>
                    <div class="FieldTitle150">
                        @Html.VnrLabelFor(model => model.ExportName)
                    </div>
                    <div class="FieldValue">
                        @{
    IEnumerable ValueExportName = new string[] { };
    if (Model != null)
    {
        ValueExportName = new[] { new { ExportName = Model.ExportName, ID = Model.ExportID } };
    }
                        }
                        @{
    var _ExportID = new MultiSelectBuilderInfo()
    {
        Width = 300,
        Name = "AppendixContractTypeInfo_ExportID",
        DataTextField = "ExportName",
        DataValueField = "ID",
        Url = _hrm_Hr_Service + "Cat_GetData/GetMultiExportWord",
        Placeholder = ConstantDisplay.HRM_Category_AppendixContractType_SelectExport.TranslateString(),
        MaxSelectedItems = 1,
        Value = ValueExportName
    };
                        }
                        @Html.VnrMultiSelectFor(model => model.ExportID, _ExportID)
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td style="padding-top:2px; padding-bottom:10px;">
                <div class="LineFooterCommandEdit">
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div>
                    <div class="FieldTitle150">
                    </div>
                    <div class="FieldValue">
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "onSaveDataPopUp", Name = "save-AppendixContractType", Content = ConstantAction.HRM_Common_Save.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "onSaveNew", Name = "save-New-AppendixContractType", Content = ConstantAction.HRM_Common_SaveNew.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "onSaveClose", Name = "save-close-AppendixContractType", Content = ConstantAction.HRM_Common_SaveClose.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                    </div>
                </div>
            </td>
        </tr>
    </table>
}
