@using HRM.Infrastructure.Utilities
@using HRM.Presentation.UI.Controls.Kendo.TabStrip
@{
    Layout = null;
    var hrm_Main_Web = ConstantPathWeb.Hrm_Main_Web;
}

@{
    var tab = new TabStripInfomation
    {
        Name = "Tab_Import",
    };

    var t1 = new ItemsInformation
    {
        LoadContentFrom = hrm_Main_Web + "Att_ImportRoster/ListImportData/",
        Selected = true
        //Content = Html.Partial("ListInvalidData").ToHtmlString(),
    };

    var t2 = new ItemsInformation
    {
        LoadContentFrom = hrm_Main_Web + "Att_ImportRoster/ListInvalidData/",

        //Content = Html.Partial("ListInvalidData").ToHtmlString(),
    };

    tab.TabItems.Add(ConstantDisplay.HRM_Category_Import_Data.TranslateString(), t1);
    tab.TabItems.Add(ConstantDisplay.HRM_Category_Import_WrongData.TranslateString(), t2);
}

@(Html.TabStripControl(tab))
<script>
    $(document).ready(function () {
        var tab = $('#Tab_Import .k-item');
        $('#Tab_Import').data().kendoTabStrip.reload(tab);
    });
</script>