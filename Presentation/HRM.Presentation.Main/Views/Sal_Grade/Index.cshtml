        //    ReadActionUrl = @_hrm_Hr_Services + "Sal_GetData/GetGradeList/",
        //    ReadData = "filterFieldInfo",
        //    EventDataBound = "changePageGird",
        ////    HyperlinkFields = hyperlinkFields
        //};
    }
    <!--Khởi tạo Grid-->
    @(Html.VnrGrid<Sal_GradeModel>(grid))
