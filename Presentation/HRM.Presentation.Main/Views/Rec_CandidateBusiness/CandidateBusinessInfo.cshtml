@using HRM.Infrastructure.Utilities
@using HRM.Presentation.UI.Controls.Kendo
@using System.Collections
@using HRM.Presentation.Recruitment.Models
@model Rec_CandidateBusinessModel

@{
    Layout = null;
    var _hrm_Sys_Service = ConstantPathWeb.Hrm_Sys_Service;
    var _hrm_Hre_Service = ConstantPathWeb.Hrm_Hre_Service;
    var _hrm_Main_Web = ConstantPathWeb.Hrm_Main_Web;
    var CandidateID = Guid.Empty;
    if (ViewData["CandidateID"] != null)
    {
        CandidateID = Common.ConvertToGuid(ViewData["CandidateID"].ToString());
    }
    if (Model != null && Model.CandidateID!=null)
    {
        CandidateID = Model.CandidateID;
    }

}
<script>
    SetFieldRequiredByScreenName('Rec_CandidateBusiness');
    $(document).ready(function () {
        $("#CandidateID").val('@CandidateID');
    })

    function onSave() {
        onSaveAndContinue($('#form_Rec_CandidateBusiness'), '@_hrm_Hre_Service', 'api/Rec_CandidateBusiness/', 'gridCandidateBusiness', 'windowCandidateBusiness');
    }

    function onSaveClose() {
        onSaveAndClose($('#form_Rec_CandidateBusiness'), '@_hrm_Hre_Service', 'api/Rec_CandidateBusiness/', 'gridCandidateBusiness', 'windowCandidateBusiness');
    }

    function onSaveDataPopUp() {
        onlySave($('#form_Rec_CandidateBusiness'), '@_hrm_Hre_Service', 'api/Rec_CandidateBusiness/', 'gridCandidateBusiness');
    }
</script>

<!--Form dùng cho edit và update-->
@using (Html.BeginForm("#", "", FormMethod.Post, new { id = "form_Rec_CandidateBusiness" }))
{
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.CandidateID)
   
    <table>
        <tr>
            <td>
                <div style="display:block">
                   

                    <div>
                        <div class="FieldTitle150">
                            @Html.VnrLabelFor(mode => mode.BusinessArea)
                        </div>
                        <div class="FieldValue">

                          @Html.VnrTextBoxFor(mode => mode.BusinessArea, "width: 300px")
                        </div>

                        <div style="clear: both;"></div>
                    </div>
                    <div>
                        <div class="FieldTitle150">
                            @Html.VnrLabelFor(mode => mode.BusinessType)
                        </div>
                        <div class="FieldValue">
                            @Html.VnrTextBoxFor(mode => mode.BusinessType, "width: 300px")
                        </div>

                        <div style="clear: both;"></div>
                    </div>
                   
                </div>

            </td>

        </tr>
        <tr>
            <td style="padding-top:2px; padding-bottom:10px;">
                <div class="LineFooterCommandEdit">
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div>
                    <div class="FieldTitle150">

                    </div>
                    <div class="FieldValue">
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "onSaveDataPopUp", Name = "save-CandidateBusiness", Content = ConstantAction.HRM_Common_Save.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "onSave", Name = "save-continue-CandidateBusiness", Content = ConstantAction.HRM_Common_SaveNew.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "onSaveClose", Name = "save-close-CandidateBusiness", Content = ConstantAction.HRM_Common_SaveClose.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                    </div>

                </div>
            </td>
        </tr>
    </table>
}

