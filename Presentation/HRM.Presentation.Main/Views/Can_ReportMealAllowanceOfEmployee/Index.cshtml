                                         Placeholder = ConstantDisplay.HRM_Canteen_Report_SelectWorkLocation.TranslateString(),
                                         Autobind = true,
                                         StyleCss = "width:200px;",
                                     };
                                }
                                @(Html.VnrComboBoxFor(mode => mode.WorkPlaceID, _workplaceName))
