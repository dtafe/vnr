<div>
    <!--Khai báo các thông tin cho Grid-->
    @{
        var columnMode = string.Empty;
        var defaultColumnMode = string.Empty;
        var userId = Session[SessionObjects.UserId];
        //Lấy tên lưới cộng thêm tên của control và action để tránh trùng nhau
        var gridControlName = ConstantControlName.HRM_grid_Cat_LineItem_Name + "__Cat_LineItem_Index";
        HRM.Presentation.Main.Controllers.Sys_ColumnModeController control = new HRM.Presentation.Main.Controllers.Sys_ColumnModeController();
        //Get thông tin cấu hình trong database
        GridBuilderModel gridInfo = control.GetGridBuilderInfo(userId + "," + gridControlName);

        var grid = new GridBuilderInfo
        {
            Name = ConstantControlName.HRM_grid_Cat_LineItem_Name,
            ShowCommand = false,
            ReadActionUrl = @_hrm_Hr_Service + "Cat_GetData/GetLineItemList/",
            ReadData = "filterFieldInfo",
        };

        if (gridInfo != null && gridInfo.ValueFields != null && gridInfo.ValueFields.Any())
        {
            grid.ValueFields = gridInfo.ValueFields;
            grid.SizeFields = gridInfo.SizeFields;
            grid.Filterable = gridInfo.FilterFields;
            grid.DisplayFields = gridInfo.DisplayFields;
            grid.LockedFields = gridInfo.LockedFields;
            grid.GroupFields = gridInfo.GroupFields;
            if (gridInfo.PageSize > 0)
            {
                grid.PageSize = gridInfo.PageSize;
            }
            columnMode = gridInfo.StringXml;
        }
        else
        {
            grid.ValueFields = new[]
            {
            
                Cat_LineItemModel.FieldNames.Code,
                Cat_LineItemModel.FieldNames.LineItemName,
                Cat_LineItemModel.FieldNames.BrandName,
                Cat_LineItemModel.FieldNames.Note,
            
            };

            grid.SizeFields = new Dictionary<string, int>()
            {
          
                {Cat_LineItemModel.FieldNames.Code,100},
                {Cat_LineItemModel.FieldNames.LineItemName,140},
                {Cat_LineItemModel.FieldNames.BrandName,120},
                {Cat_LineItemModel.FieldNames.Note,200},
            
            };



            grid.DisplayFields = new Dictionary<string, string>()
            {
            
                {Cat_LineItemModel.FieldNames.Code,ConstantDisplay.HRM_Category_LineItem_Code},
                {Cat_LineItemModel.FieldNames.LineItemName,ConstantDisplay.HRM_Category_LineItem_LineItemName},
                {Cat_LineItemModel.FieldNames.BrandName,ConstantDisplay.HRM_Category_LineItem_BrandID},
                {Cat_LineItemModel.FieldNames.Note,ConstantDisplay.HRM_Category_LineItem_Note},
           
            };
            defaultColumnMode = control.SetDefaultGridBuilderInfo(grid);
        }
        //var grid = new GridBuilderInfo
        //{
        //    Name = "grid_Cat_LineItem",
        //    ValueFields = valueFields,
        //    SizeFields = sizeFields,
        //    DisplayFields = displayFields,
            
        //    ShowCommand = false,
        //    ReadActionUrl = @_hrm_Hr_Service + "Cat_GetData/GetLineItemList/",
        //    ReadData = "filterFieldInfo",
        //};
    }

    @(Html.VnrGrid<Cat_LineItemModel>(grid))
    <script>
        ClickButtonChangeColum("btnChangeColumnLineItem", "Cat_LineItemModel");
        $(document).ready(function () {
            $("#" + '@ConstantControlName.HRM_ChangeColum_Grid_Name').val('@gridControlName');
            $("#" + '@ConstantControlName.HRM_ChangeColum_ColumMode_Name').val('@Html.Raw(columnMode)');
            $("#" + '@ConstantControlName.HRM_ChangeColum_Default_ColumMode_Name').val('');
            $("#" + '@ConstantControlName.HRM_ChangeColum_Default_ColumMode_Name').val('@Html.Raw(defaultColumnMode)');
        });
    </script>
</div>
@{
    var listValueField = grid.ValueFields;
    var valueFields1 = string.Empty;
    if (listValueField != null)
    {
        for (int i = 0; i < listValueField.Count(); i++)
        {
            valueFields1 += "," + listValueField[i];
        }
    }
}
