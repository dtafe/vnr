@{
    var window = new WindowBuilderInfo
    {
        Name = ConstantControlName.HRM_Category_UsualAllowance_PopUp_Name,
        Visible = false,
        Width = 700,
        LoadContentFrom = @_hrm_Main_Web + "Cat_UsualAllowance/CatUsualAllowanceInfo/",
    };
