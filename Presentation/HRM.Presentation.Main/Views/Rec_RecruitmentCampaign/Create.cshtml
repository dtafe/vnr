@using HRM.Infrastructure.Utilities;
@using HRM.Presentation.UI.Controls.Kendo

@model HRM.Presentation.Recruitment.Models.Rec_RecruitmentCampaignModel
@{
    ViewBag.Title = "Index RecruitmentCampaign";
    Layout = null;
    var _hrm_Hre_Service = ConstantPathWeb.Hrm_Hre_Service;
    var _hrm_Main_Web = ConstantPathWeb.Hrm_Main_Web;
}
<script>
    function doSave() {
        onCreate($('#form-create'), '@_hrm_Hre_Service', 'api/Rec_RecruitmentCampaign/');
        result = true;
        return result;
    }
    function doSaveNew() {
        if (doSave()) {
            KendoRouteMapping('#Hrm_Main_Web/Rec_RecruitmentCampaign/Create/', 'Hrm_Main_Web', '@_hrm_Main_Web');
        }
    }
</script>
<form action="#" method="POST" id="form-create">
    <div class="panel-wrap">
        <div id="main-content">
            <div class="widget">
                <div class="section-header">
                    <div class="title">
                        <img src="@ConstantPath.Rec_CandidateIconPath" alt="" width="20" height="20" />
                        @ConstantDisplay.HRM_Rec_RecruitmentCampaign_AddNew.TranslateString() <a class="link-back" onclick="clickBackRecruitmentCampaign()" style="padding-left: 3px">(@ConstantDisplay.HRM_Rec_RecruitmentCampaign_Back_To_List.TranslateString())</a>
                    </div>
                </div>

                <div class="commandToolBarWidge">
                    <div class="options" style="margin-top: 5px;">
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "doSave", Name = "save_Rec_RecruitmentCampaign", Content = ConstantAction.HRM_Common_Save.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "doSaveNew", Name = "save-continue_Rec_RecruitmentCampaign", Content = ConstantAction.HRM_Common_SaveNew.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                    </div>
                </div>
                @Html.Partial("CreateOrUpdate", Model)
            </div>
        </div>
    </div>
</form>

<script>
    function clickBackRecruitmentCampaign() {
        var link = $("#CurrentLinkForClickBack").val();
        if (link == "") {
            KendoRouteMapping("#Hrm_Main_Web/Rec_RecruitmentCampaign/Index#NewTab", "Hrm_Main_Web", '@_hrm_Main_Web');
        }
        else {
            clickBack();
        }
    }
</script>



