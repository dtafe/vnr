@using HRM.Infrastructure.Utilities
@using System.Collections
@using HRM.Presentation.UI.Controls.Kendo
@using HRM.Presentation.Category.Models;
@model Cat_NameEntityModel

@{
    Layout = null;
    var ID = Model == null ? Guid.Empty : Model.ID;
    var _hrm_Hr_Service = ConstantPathWeb.Hrm_Hre_Service;
    var lineId = Model == null ? Guid.Empty : Model.ID;
    var _hrm_Sys_Service = ConstantPathWeb.Hrm_Sys_Service;
}
<script>
    SetFieldRequiredByScreenName("Cat_NameEntity_AreaPostJob");

    function Setvalue() {
        $('#@Html.FieldIdFor(model=>model.NameEntityType)').val('E_AREAPOSTJOB');
        $('#@Html.FieldIdFor(model=>model.EnumType)').val('E_AREAPOSTJOB');
    }

    function onSaveNew() {
        Setvalue();
        onSaveAndContinue($('#form_Cat_AreaPostJob'), '@_hrm_Hr_Service', 'api/Cat_AreaPostJob/', '@ConstantControlName.HRM_Category_AreaPostJob_Grid_Name', '@ConstantControlName.HRM_Category_AreaPostJob_PopUp_Name'); return false;
    }

    function onSaveClose() {
        Setvalue();
        onSaveAndClose($('#form_Cat_AreaPostJob'), '@_hrm_Hr_Service', 'api/Cat_AreaPostJob/', '@ConstantControlName.HRM_Category_AreaPostJob_Grid_Name', '@ConstantControlName.HRM_Category_AreaPostJob_PopUp_Name'); return false;
    }

    function onSaveDataPopUp() {
        Setvalue();
        onlySave($('#form_Cat_AreaPostJob'), '@_hrm_Hr_Service', 'api/Cat_AreaPostJob/', '@ConstantControlName.HRM_Category_AreaPostJob_Grid_Name'); return false;
    }

</script>
<!--Form dùng cho edit và update-->
@using (Html.BeginForm("#", "", FormMethod.Post, new { id = "form_Cat_AreaPostJob" }))
{
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.NameEntityType)
    @Html.HiddenFor(model => model.EnumType)
    <table>
        <tr>
            <td>
                <div>
                    <div class="FieldTitle150 ">
                        @Html.VnrLabelFor(mode => mode.Code)
                    </div>
                    <div class="FieldValue">

                        @{
    var Code = new TextBoxBuilderInfo()
    {
        Width = 300,
        Name = "AreaPostJobInfo_Code"
    };
    if (Model != null)
    {
        Code.Value = Model == null ? string.Empty : Model.Code;
    }
                        }
                        @Html.VnrTextBoxFor(mode => mode.Code, Code)
                    </div>
                </div>
                <div>
                    <div class="FieldTitle150 ">
                        <label>
                            @ConstantDisplay.HRM_Category_NameEntity_AreaPostJob.TranslateString()
                        </label>
                    </div>
                    <div class="FieldValue">
                        @{
    var _NameEntityName = new TextBoxBuilderInfo()
  {
      Width = 300,
      Name = "AreaPostJobInfo_NameEntityName"
  };
    if (Model != null)
    {
        _NameEntityName.Value = Model.NameEntityName == null ? string.Empty : Model.NameEntityName;
    }
                        }
                        @Html.VnrTextBoxFor(mode => mode.NameEntityName, _NameEntityName)
                    </div>
                </div>

                <div>
                    <div class="FieldTitle150 ">
                        @Html.VnrLabelFor(mode => mode.Description)
                    </div>
                    <div class="FieldValue">

                        @Html.VnrTextAreaFor(mode => mode.Description, "width:500px;height:100px;")
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td style="padding-top:2px; padding-bottom:10px;">
                <div class="LineFooterCommandEdit">
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div>
                    <div class="FieldTitle150"></div>
                    <div class="FieldValue">
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "onSaveDataPopUp", Name = "save-AreaPostJobInfo", Content = ConstantAction.HRM_Common_Save.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "onSaveNew", Name = "save-New-AreaPostJobInfo", Content = ConstantAction.HRM_Common_SaveNew.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "onSaveClose", Name = "save-close-AreaPostJobInfo", Content = ConstantAction.HRM_Common_SaveClose.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                    </div>
                </div>
            </td>
        </tr>
    </table>
}
