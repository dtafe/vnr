@using HRM.Presentation.UI.Controls.Kendo
@using HRM.Presentation.UI.Controls.Kendo.DropDownList
@using HRM.Presentation.UI.Controls.Kendo.MultiSelect
@using HRM.Infrastructure.Utilities


@model HRM.Presentation.Attendance.Models.Att_AttendanceTableModel
@{
    var _hrm_Hre_Service = ConstantPathWeb.Hrm_Hre_Service;
}

<div class="VnRMain">
    <table style="width:100%">
        <tbody>

            <tr><td colspan="3" style=""></td></tr>
            <tr>
                <td class="Box_Mid_Left">&nbsp;&nbsp;&nbsp;</td>
                <td valign="top">
                    <div style="width:500px; display:block; float:left">
                        <div id="div2">
                            <div class="FieldTitle">
                                @Html.VnrLabelFor(mode => mode.ProfileID)
                                @Html.HiddenFor(mode => mode.ID)
                            </div>
                            <div class="FieldValue">
                                @{
                                    var multiSelectProfileID = new MultiSelectInformation()
                                    {
                                        Name = "ProfileID",
                                        DataTextField = "ProfileName",
                                        DataValueField = "ID",
                                        Url = @_hrm_Hre_Service + "HrMultiSelect/GetMultiProfile",
                                        Placeholder = ConstantDisplay.HRM_HR_SelectProfile.TranslateString(),
                                        Width = 170,
                                        Height = 170,
                                        MaxSelectedItems = 1,
                                        ValueMultiselect = @Html.DisplayFor(mode => mode.ProfileID).ToString()
                                    };
                                }
                                @(Html.MultiSelectListControl(multiSelectProfileID))
                                @Html.ValidationMessageFor(model => model.ProfileID)
                            </div>
                        </div>
                        <div id="div3">
                            <div class="FieldTitle">
                                @Html.VnrLabelFor(mode => mode.MonthYear)
                            </div>
                            <div class="FieldValue">
                                @Html.Kendo().DatePickerFor(model => model.MonthYear)
                                @Html.ValidationMessageFor(model => model.MonthYear)
                            </div>
                            <br />
                        </div>
                        <div id="div5">
                            <div class="FieldTitle">
                                @Html.VnrLabelFor(mode => mode.StdWorkDayCount)
                            </div>
