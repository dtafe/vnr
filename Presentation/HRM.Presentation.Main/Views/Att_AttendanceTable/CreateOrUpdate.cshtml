                                @{
                                    var StdWorkDayCount = new NumericTextBoxBuilderInfo<double>() { };
                                }
                                @(Html.VnrNumericTextBoxFor(model => model.StdWorkDayCount, StdWorkDayCount))
                                @Html.ValidationMessageFor(model => model.StdWorkDayCount)
                            </div>
                        </div>
