@using HRM.Presentation.UI.Controls.Kendo
@using HRM.Presentation.UI.Controls.Kendo.DropDownList
@using HRM.Presentation.UI.Controls.Kendo.MultiSelect
@using HRM.Presentation.UI.Controls.Kendo.DropDownList
@using HRM.Infrastructure.Utilities

@model HRM.Presentation.Hr.Models.Hre_DependantModel

@Html.ValidationSummary(false)
@Html.AntiForgeryToken()

@{
    IList<SelectListItem> list = Enum.GetValues(typeof(EnumDropDown.Gender))
        .Cast<EnumDropDown.Gender>()
        .Select(x => new SelectListItem { Value = EnumDropDown.GetEnumDescription(x), Text = x.ToString() })
        .ToList();

    SelectList data = new SelectList(list, "Value", "Text");
}


<div class="VnRMain">
    <table style="width:50%">
        <tbody>
            <tr>
                <td class="Box_Top_Left"></td>
                <td valign="middle" class="Box_Top_Mid"></td>
                <td class="Box_Top_Right"></td>
            </tr>
            <tr>
                <td class="Box_Mid_Left">&nbsp;&nbsp;&nbsp;</td>
                <td valign="top">
                    <div id="div2">
                        <div class="FieldTitle">
                            @Html.VnrLabelFor(mode => mode.ProfileID)
                        </div>
                        <div class="FieldValue">
                            @Html.DisplayFor(model => model.ProfileName)
                        </div>
                        <div style="clear: both;"></div>
                    </div>
                    <div id="div3">
                        <div class="FieldTitle">
                            @Html.VnrLabelFor(mode => mode.DependantName)
                        </div>
                        <div class="FieldValue">
                            @Html.DisplayFor(model => model.DependantName)
                        </div>
                        <div style="clear: both;"></div>
                    </div>
                    <div id="div4">
                        <div class="FieldTitle">
                            @Html.VnrLabelFor(mode => mode.DateOfBirth)
                        </div>
                        <div class="FieldValue">
                            @Html.DisplayFor(model => model.DateOfBirth)
                        </div>
                        <div style="clear: both;"></div>
                    </div>
                    <div id="div5">
                        <div class="FieldTitle">
                            @Html.VnrLabelFor(mode => mode.Gender)
                        </div>
                        <div class="FieldValue">
                            @Html.DisplayFor(model => model.Gender)
                        </div>
                        <div style="clear: both;"></div>
                    </div>
                    <div id="div6">
                        <div class="FieldTitle">
                            @Html.VnrLabelFor(mode => mode.RelationID)
                        </div>
                        <div class="FieldValue">
                            @Html.DisplayFor(model => model.RelativeName)
                        </div>
                        <div style="clear: both;"></div>
                    </div>
                    <div id="div7">
                        <div class="FieldTitle">
                            @Html.VnrLabelFor(mode => mode.MonthOfEffect)
                        </div>
                        <div class="FieldValue">
                            @Html.DisplayFor(model => model.MonthOfEffect)
                        </div>
                        <div style="clear: both;"></div>
                    </div>
                    <div id="div8">
                        <div class="FieldTitle">
                            @Html.VnrLabelFor(mode => mode.MonthOfExpiry)
                        </div>
                        <div class="FieldValue">
                            @Html.DisplayFor(model => model.MonthOfExpiry)
                        </div>
                        <div style="clear: both;"></div>
                    </div>
                </td>
                <td class="Box_Mid_Right">&nbsp;&nbsp;&nbsp;&nbsp;</td>
            </tr>
            <tr>
                <td class="Box_Bottom_Left"></td>
                <td class="Box_Bottom_Mid"></td>
                <td class="Box_Bottom_Right"></td>
            </tr>
        </tbody>
    </table>
</div>
