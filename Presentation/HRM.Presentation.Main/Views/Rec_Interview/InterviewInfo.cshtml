                    //strHtml += "<label>" + data[i].EnumTranslate + "</label><input type='text' id ='" + data[i].ConditionName + "' class='k-textbox' style='width: 40px' /></br>";
                }
                strHtml += "</table>"
                $("#displayText").html(strName);
                $("#displayValue").html(strHtml);


                return arrayConditionEnum;
            },
            error: function (data) {

            }
        });
    }
