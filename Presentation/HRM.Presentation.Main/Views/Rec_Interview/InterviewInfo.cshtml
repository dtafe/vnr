    function result() {
        ShowHre_ProgressBar();
        debugger;
        var _candidateID = $('#InterviewInfo_CandidateID').val().join(",").replace(",", "");
        var _ID = $('#InterviewInfo_GroupConditionID').val();
        var Score1 = $('#Score1').val();
