        var x = isExport;
        var UserLoginId = $('#UserLoginId').val();
        var elementPara = {
            UserCreateID: UserLoginId,
            DateStart: ConvertDatetime('@_hrm_Sys_Service' + 'Sys_GetData/GetFormatDate/', $("#DateStart").val()),
