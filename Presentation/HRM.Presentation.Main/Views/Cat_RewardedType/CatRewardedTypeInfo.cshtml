@using HRM.Infrastructure.Utilities
@using System.Collections
@using HRM.Presentation.UI.Controls.Kendo
@using HRM.Presentation.Category.Models;
@model Cat_RewardedTypeModel

@{
    Layout = null;
    var ID = Model == null ? Guid.Empty : Model.ID;
    var _hrm_Hr_Service = ConstantPathWeb.Hrm_Hre_Service;
    var lineId = Model == null ? Guid.Empty : Model.ID;
    var _hrm_Sys_Service = ConstantPathWeb.Hrm_Sys_Service;
}
<script>
    SetFieldRequired();

    function onSaveNew() {
            onSaveAndContinue($('#form_Cat_RewardedType'), '@_hrm_Hr_Service', 'api/Cat_RewardedType/', '@ConstantControlName.HRM_Category_RewardedType_Grid_Name', '@ConstantControlName.HRM_Category_RewardedType_PopUp_Name'); return false;
    }

    function onSaveClose() {
            onSaveAndClose($('#form_Cat_RewardedType'), '@_hrm_Hr_Service', 'api/Cat_RewardedType/', '@ConstantControlName.HRM_Category_RewardedType_Grid_Name', '@ConstantControlName.HRM_Category_RewardedType_PopUp_Name'); return false;
    }
    function onSaveDataPopUp() {
            onlySave($('#form_Cat_RewardedType'), '@_hrm_Hr_Service', 'api/Cat_RewardedType/', '@ConstantControlName.HRM_Category_RewardedType_Grid_Name'); return false;
    }
</script>
<!--Form dùng cho edit và update-->
@using (Html.BeginForm("#", "", FormMethod.Post, new { id = "form_Cat_RewardedType" }))
{
    @Html.HiddenFor(model => model.ID)
    <table>
        <tr>
            <td>

                <div id="div5">
                    <div class="FieldTitle150">
                        @Html.VnrLabelFor(mode => mode.Code)
                    </div>
                    <div class="FieldValue">
                        @{
    var RewardTypeCode = new TextBoxBuilderInfo()
    {
        Width = 300,
        Name = "RewardedTypeinfo_Code",
    };
    if (Model != null)
    {
        RewardTypeCode.Value = Model == null ? string.Empty : Model.Code;
    }
                        }
                        @Html.VnrTextBoxFor(mode => mode.Code, RewardTypeCode)
                    </div>
                </div>
                <div>
                    <div class="FieldTitle150">
                        @Html.VnrLabelFor(mode => mode.RewardedTypeName)
                    </div>
                    <div class="FieldValue">
                        @{
    var RewardedTypeName = new TextBoxBuilderInfo()
    {
        Width = 300,
        Name = "RewardedTypeName",
    };
    if (Model != null)
    {
        RewardedTypeName.Value = Model == null ? string.Empty : Model.RewardedTypeName;
    }
                        }
                        @Html.VnrTextBoxFor(mode => mode.RewardedTypeName, RewardedTypeName)
                    </div>
                </div>     

                <div>
                    <div class="FieldTitle150">
                        @Html.VnrLabelFor(mode => mode.Notes)
                    </div>
                    <div class="FieldValue">
                        @Html.VnrTextAreaFor(mode => mode.Notes, "width:500px;height:100px;")
                    </div>
                    <div style="clear: both;"></div>
                </div>
            </td>
        </tr>
        <tr>
            <td style="padding-top:2px; padding-bottom:10px;">
                <div class="LineFooterCommandEdit">
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div>
                    <div class="FieldTitle150">
                    </div>
                    <div class="FieldValue">
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "onSaveDataPopUp", Name = "save-RewardedType", Content = ConstantAction.HRM_Common_Save.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "onSaveNew", Name = "save-New-RewardedType", Content = ConstantAction.HRM_Common_SaveNew.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                        @Html.VnrButton(new ButtonBuilderInfo() { EventClick = "onSaveClose", Name = "save-close-RewardedType", Content = ConstantAction.HRM_Common_SaveClose.TranslateString(), ImageUrl = ConstantPath.IconSavePath })
                    </div>
                </div>
            </td>
        </tr>
    </table>
}
